{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "allowJs": true,
    "rootDir": ".",
    "removeComments": false,
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "/dist/**/*",
  ]
}